<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order_food_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.prateek.bimsapp.OrderFoodFinal"
    tools:showIn="@layout/activity_order_food_final">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#939393"
        android:layout_height="200dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/relativeLayout2">

        <TextView
            android:text="FoodItemKiList"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:id="@+id/foodItemList"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="15sp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Total"
            android:id="@+id/totalTv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Name"
            android:layout_marginTop="12dp"
            android:id="@+id/nameTv"
            android:layout_below="@+id/totalTv"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="address"
            android:layout_marginTop="18dp"
            android:id="@+id/addressTv"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="remarks"
            android:layout_marginTop="18dp"
            android:id="@+id/remarksTv"
            android:layout_below="@+id/addressTv"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

<TextView
    android:layout_width="191.8dp"
    android:layout_height="50dp"
    android:text="CANCEL"
    android:gravity="center"
    android:textSize="18sp"
    android:onClick="cancel"
    android:background="#aaa"/>

        <TextView
            android:layout_width="191.8dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:onClick="order"
            android:text="ORDER"
            android:layout_height="50dp"
            android:background="#4f4aaa"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
