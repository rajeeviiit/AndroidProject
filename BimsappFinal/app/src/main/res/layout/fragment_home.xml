<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prateek.bimsapp.HomeFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/llFeature">

            <View
                android:layout_width="5dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/textViewFeatured"
                android:text="FEATURED"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hrlist_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llFeature"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:id="@+id/llVeg"
            android:layout_margin="2dp"

            android:layout_below="@id/hrlist_recycler_view">

            <View
                android:layout_width="5dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginBottom="2dp"
                android:id="@+id/textViewVeg"
                android:text="VEG"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hrlist_recycler_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llVeg"
            android:layout_alignParentStart="true"
            >


        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:id="@+id/llNonVeg"
            android:layout_marginBottom="30dp"
            android:layout_margin="2dp"

            android:layout_below="@id/hrlist_recycler_view1">

            <View
                android:layout_width="5dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginBottom="2dp"
                android:id="@+id/textViewAll"
                android:text="Non Veg"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hrlist_recycler_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llNonVeg"
            android:layout_alignParentStart="true"
            >
        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</ScrollView>
