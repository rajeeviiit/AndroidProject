<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prateek.bimsapp.RemarksFragment">

    <Button
        android:layout_width="300dp"
        android:text="Add Remarks"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/editTextRemarks"
        android:layout_alignStart="@+id/editTextRemarks"
        android:id="@+id/buttonAddRemarks" />

    <TextView
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Make it more spicy"
        android:layout_marginTop="23dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/editTextRemarks" />

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:text="1. Bring Extra Ketchup"
        android:id="@+id/textView9"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Example:"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="#4566"
        android:id="@+id/editTextRemarks"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
