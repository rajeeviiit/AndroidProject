<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jsroyal.githubrepo.UserID">

    <EditText
        android:id="@+id/github_user_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/repo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#7986CB"
        android:hint="@string/enter_github_user_name" />

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/github_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:text="@string/submit_button" />

    <Button
        android:id="@+id/repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        android:textSize="20dp"
        android:gravity="center"
        android:text="@string/heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
